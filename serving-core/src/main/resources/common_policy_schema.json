      "id": "http://sparkta.stratio.com/transformations",
      "type": "array",
      "items": {
        "id": "http://sparkta.stratio.com/transformations/",
        "type": "object",
        "properties": {
          "name": {
            "id": "http://sparkta.stratio.com/transformations/name",
            "type": "string"
          },
          "order": {
            "id": "http://sparkta.stratio.com/transformations/order",
            "type": "integer"
          },
          "inputField": {
            "id": "http://sparkta.stratio.com/transformations/inputField",
            "type": "string"
