<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>parent</artifactId>
        <groupId>com.stratio.sparta</groupId>
        <version>2.5.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>stratio-sparta</artifactId>
    <properties>
        <classpath.directory>lib</classpath.directory>
        <config.directory>src/main/resources</config.directory>
        <binary.name>sparta-${project.version}</binary.name>
        <driver.mainclass>com.stratio.sparta.serving.api.Sparta</driver.mainclass>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.stratio.sparta</groupId>
            <artifactId>driver</artifactId>
        </dependency>
        <dependency>
            <groupId>com.stratio.sparta</groupId>
            <artifactId>serving-api</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>package</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                        <version>1.7</version>
                        <executions>
                            <execution>
                                <id>copy PLUGINS DRIVER</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target name="copy folders">
                                        <copy todir="target/appassembler/driver">
                                            <fileset dir="../driver/target">
                                                <include name="*.jar"/>
                                                <exclude name="**/*-javadoc*"/>
                                                <exclude name="**/*original*"/>
                                            </fileset>
                                        </copy>
                                        <copy todir="target/appassembler/repo/serving-api">
                                            <fileset dir="../serving-api" includes="**/*.jar" excludes="**/*-javadoc*"/>
                                            <mapper type="flatten" />
                                        </copy>
                                        <copy todir="target/appassembler/repo/web">
                                            <fileset dir="../web" includes="**/*.jar" excludes="**/*-javadoc*"/>
                                            <mapper type="flatten" />
                                        </copy>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>copy CROSSDATA PLUGIN</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.stratio.gosec.dyplon.plugins</groupId>
                                    <artifactId>dyplon-crossdata</artifactId>
                                    <version>0.16.3-673c0a9</version>
                                    <type>jar</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.stratio.gosec.dyplon.plugins</groupId>
                                    <artifactId>dyplon-crossdata</artifactId>
                                    <version>0.15.2-52bd567</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>
                                target/appassembler/crossdata
                            </outputDirectory>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>appassembler-maven-plugin</artifactId>
                        <version>1.10</version>
                        <executions>
                            <execution>
                                <id>engine</id>
                                <configuration>
                                    <configurationSourceDirectory>${config.directory}</configurationSourceDirectory>
                                    <configurationDirectory>:/etc/sds/sparta</configurationDirectory>
                                    <copyConfigurationDirectory>true</copyConfigurationDirectory>
                                    <includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
                                    <assembleDirectory>target/appassembler</assembleDirectory>
                                    <extraJvmArguments>$SPARTA_OPTS</extraJvmArguments>
                                    <filterConfigurationDirectory>true</filterConfigurationDirectory>
                                    <programs>
                                        <program>
                                            <mainClass>${driver.mainclass}</mainClass>
                                            <id>run</id>
                                        </program>
                                    </programs>
                                    <platforms>
                                        <platform>unix</platform>
                                    </platforms>
                                </configuration>
                                <phase>package</phase>
                                <goals>
                                    <goal>assemble</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.stratio.mojo.unix</groupId>
                        <artifactId>unix-maven-plugin</artifactId>
                        <version>1.2.0</version>
                        <extensions>true</extensions>
                        <inherited>false</inherited>
                        <configuration>
                            <outputFileName>stratio-sparta</outputFileName>
                            <contact><![CDATA[Stratio SpaRTA<sparta@stratio.com>]]></contact>
                            <contactEmail>sparta@stratio.com</contactEmail>
                            <deb>
                                <section>devel</section>
                                <preDepends>jq,lockfile-progs,curl,uuid-runtime</preDepends>
                            </deb>
                            <rpm>
                                <group>stratio</group>
                                <requires>bash</requires>
                                <requires>jq</requires>
                                <requires>curl</requires>
                            </rpm>
                            <name>Sparta</name>
                            <excludeDirectoryAttributes>
                                <dir>/etc</dir>
                                <dir>/etc/init.d</dir>
                                <dir>/etc/default</dir>
                                <dir>/var</dir>
                                <dir>/var/run</dir>
                                <dir>/var/log</dir>
                                <dir>/opt</dir>
                                <dir>/usr</dir>
                                <dir>/bin</dir>
                            </excludeDirectoryAttributes>
                            <defaults>
                                <directoryAttributes>
                                    <user>sparta</user>
                                    <group>stratio</group>
                                    <mode>0750</mode>
                                </directoryAttributes>
                                <fileAttributes>
                                    <user>sparta</user>
                                    <group>stratio</group>
                                    <mode>0644</mode>
                                </fileAttributes>
                            </defaults>
                            <assembly>
                                <mkdirs>
                                    <path>/var/run/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/log/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/opt/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/etc/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/dg-agent</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/dg-agent</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/dg-agent/persistence</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/dg-agent/persistence/journal</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/dg-agent/persistence/snapshots</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/spark-driver</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/spark-driver</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/spark-driver/persistence</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/spark-driver/persistence/journal</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/sparta/spark-driver/persistence/snapshots</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/log/sds/sparta</path>
                                </mkdirs>
                                <!-- For the jars plugin -->
                                <mkdirs>
                                    <path>/opt/sds/sparta/plugins</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/opt/sds/sparta/backups</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/opt/sds/sparta/crossdata</path>
                                </mkdirs>
                                <copyDirectory>
                                    <from>target/appassembler/bin</from>
                                    <to>/opt/sds/sparta/bin</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/appassembler/repo</from>
                                    <to>/opt/sds/sparta/repo</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/appassembler/:/etc/sds/sparta</from>
                                    <to>/etc/sds/sparta</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/appassembler/driver</from>
                                    <to>/opt/sds/sparta/driver</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>src/main/unix/files_and_dirs/bin</from>
                                    <to>/opt/sds/sparta/bin</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/appassembler/crossdata</from>
                                    <to>/opt/sds/sparta/crossdata</to>
                                </copyDirectory>
                            </assembly>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deb</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-deb</goal>
                                </goals>
                                <configuration>
                                    <architecture>all</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/sparta-functions</path>
                                            <toFile>/etc/default/sparta-functions</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>644</mode>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/sparta-variables</path>
                                            <toFile>/etc/default/sparta-variables</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>644</mode>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/init.d/sparta-deb.sh</path>
                                            <toFile>/etc/init.d/sparta</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <version>2.8.1</version>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
