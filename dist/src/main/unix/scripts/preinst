GROUP=stratio
USER=sparta

createCredentials () {
    if ! getent group ${GROUP} >/dev/null 2>&1; then
        groupadd ${GROUP}
    fi
    if ! getent passwd ${USER} >/dev/null 2>&1; then
         useradd -M -d /opt/sds/sparta -g ${GROUP} -s /bin/nologin ${USER}
    fi
}

case "$1" in
	install)
	    createCredentials
	;;
	upgrade)
	    createCredentials
	;;
esac

exit 0