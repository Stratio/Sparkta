    Usage:
        In order to use xml properly, log4j 2 Mapping Diagnosis Context (MDC) keys must be replaced by proper key name (the one used inside project to set MDC property value)
        Example:
            Considering a project that sets MDC properties using these keys: [user, audit, process, data-json], these replacements must be executed over xml file
                - sed -i -e 's/\[MDC_USER_KEY\]/user/g' log4j2.xml
                - sed -i -e 's/\[MDC_AUDIT_KEY\]/audit/g' log4j2.xml
                - sed -i -e 's/\[MDC_PROCESS_KEY\]/process/g' log4j2.xml
                - sed -i -e 's/\[MDC_DATA-JSON_KEY\]/data-json/g' log4j2.xml
-->
<Configuration monitorInterval="60">
    <Appenders>
        <File name="stderr" fileName="stderr.log" append="false">
            <PatternLayout>
                <Pattern>
                    %d{yyyy-MM-dd'T'HH:mm:ss.SSS}%replace{%d{XXX}}{^Z$}{+00:00} %level %replace{%X{[MDC_USER_KEY]}}{^.{0}$}{-} %replace{%X{[MDC_AUDIT_KEY]}}{^.{0}$}{-} %replace{%X{[MDC_PROCESS_KEY]}}{^.{0}$}{-} %C {"@message":"%m","@data":%replace{%X{[MDC_DATA-JSON_KEY]}}{^.{0}$}{{}}}%n
                </Pattern>
            </PatternLayout>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
        </File>
        <File name="stdout" fileName="stdout.log" append="false">
            <PatternLayout>
                <Pattern>
                    %d{yyyy-MM-dd'T'HH:mm:ss.SSS}%replace{%d{XXX}}{^Z$}{+00:00} %level %replace{%X{[MDC_USER_KEY]}}{^.{0}$}{-} %replace{%X{[MDC_AUDIT_KEY]}}{^.{0}$}{-} %replace{%X{[MDC_PROCESS_KEY]}}{^.{0}$}{-} %C {"@message":"%m","@data":%replace{%X{[MDC_DATA-JSON_KEY]}}{^.{0}$}{{}}}%n
                </Pattern>
            </PatternLayout>
            <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="${env:SERVICE_LOG_LEVEL:-ERROR}">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Root>
        <Logger name="com.stratio.sparta" level="${env:SPARTA_LOG_LEVEL:-INFO}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="org.apache.spark.launcher.SpartaOutputRedirector" level="${env:SPARTA_REDIRECTOR_LOG_LEVEL:-INFO}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="com.stratio.crossdata" level="${env:CROSSDATA_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="org.apache.zookeeper" level="${env:ZOOKEEPER_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="org.I0Itec.zkclient" level="${env:ZOOKEEPER_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="org.apache.spark" level="${env:SPARK_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="org.spark-project" level="${env:SPARK_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="org.apache.hadoop" level="${env:HADOOP_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="org.apache.parquet" level="${env:PARQUET_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="org.apache.avro" level="${env:AVRO_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="org.apache.http" level="${env:HTTP_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
        <Logger name="slick" level="${env:SLICK_LOG_LEVEL:-ERROR}" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="stderr"/>
        </Logger>
    </Loggers>
</Configuration>
