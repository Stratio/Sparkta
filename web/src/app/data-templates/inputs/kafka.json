      {
        "propertyId": "tlsEnabled",
        "propertyName": "_TLS_ENABLE_",
        "propertyType": "boolean",
        "tooltip": "Enable TLS connection to connect to Kafka brokers getting certs from vault in Spark job",
        "default": false,
        "qa": "fragment-details-kafka-tls"
