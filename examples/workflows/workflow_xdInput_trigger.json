{
  "name": "crossdata_trigger",
  "description": "Workflow with crossdata and trigger",
  "settings": {
    "global": {
      "executionMode": "local",
      "streamTemporalTable": "stream",
      "driverUri": "/opt/sds/sparta/driver/sparta-driver.jar",
      "userPluginsJars": [
        {
          "jarPath": ""
        }
      ],
      "initSqlSentences": [
        {
          "sentence": ""
        }
      ]
    },
    "checkpointSettings": {
      "checkpointPath": "sparta/checkpoint",
      "enableCheckpointing": true,
      "autoDeleteCheckpoint": true,
      "addTimeToCheckpointPath": false
    },
    "streamingSettings": {
      "window": "6s"
    },
    "sparkSettings": {
      "master": "local[*]",
      "sparkKerberos": false,
      "sparkDataStoreTls": false,
      "sparkHome": "/opt/spark/dist",
      "submitArguments": {
        "userArguments": [
          {
            "submitArgument": "",
            "submitValue": ""
          }
        ],
        "deployMode": "client",
        "supervise": false
      },
      "sparkConf": {
        "sparkResourcesConf": {
          "coresMax": "2",
          "executorMemory": "1G",
          "executorCores": "1",
          "driverCores": "1",
          "driverMemory": "1G",
          "localityWait": "0",
          "taskMaxFailures": "8",
          "blockInterval": "200ms"
        },
        "sparkDockerConf": {
          "executorDockerImage": "qa.stratio.com/stratio/spark-krb-calico:2.1.0",
          "executorDockerVolumes": "/opt/mesosphere/packages/:/opt/mesosphere/packages/:ro,/opt/mesosphere/lib/:/opt/mesosphere/lib/:ro",
          "executorForcePullImage": false
        },
        "sparkMesosConf": {
          "mesosNativeJavaLibrary": "/opt/mesosphere/lib/libmesos.so",
          "mesosExecutorHome": "/opt/spark/dist"
        },
        "userSparkConf": [
          {
            "sparkConfKey": "",
            "sparkConfValue": ""
          }
        ],
        "coarse": true,
        "stopGracefully": true,
        "parquetBinaryAsString": true
      }
    }
  },
  "pipelineGraph": {
    "nodes": [
      {
        "name": "crossdata",
        "type": "CrossdataInputStep",
        "writer": {
          "saveMode": "Append",
          "tableName": "inputxd"
        },
        "configuration": {
          "offsetValue": "1",
          "offsetField": "id",
          "finishContextWhenEmpty": false,
          "rememberDuration": "",
          "finishAppWhenEmpty": false,
          "offsetLocation": "ZOOKEEPER",
          "initialSentence": "",
          "fromBeginning": true,
          "query": "select * from blacklist",
          "zookeeperConnection": "localhost:2181",
          "stopContexts": false,
          "caName": "",
          "offsetOperator": ">=",
          "zookeeperPath": "/crossdata/offsetsdemo",
          "forcedBeginning": true,
          "tlsEnable": false,
          "storageLevel": "MEMORY_ONLY_SER"
        }
      },
      {
        "name": "trigger1",
        "type": "TriggerTransformStep",
        "writer": {
          "saveMode": "Append",
          "tableName": "triggertable"
        },
        "configuration": {
          "whenError": "Error",
          "sql": "SELECT idproduct FROM crossdata"
        }
      },
      {
        "name": "print",
        "type": "PrintOutputStep",
        "writer": {
          "saveMode": "Append",
          "tableName": ""
        },
        "configuration": {
          "printData": true,
          "printSchema": true,
          "logLevel": "warn"
        }
      }
    ],
    "edges": [
      {
        "origin": "crossdata",
        "destination": "trigger1"
      },
      {
        "origin": "crossdata",
        "destination": "print"
      },
      {
        "origin": "trigger1",
        "destination": "print"
      }
    ]
  }
}