{
  "name": "policy-kafka-direct",
  "description": "policy-kafka-direct",
  "sparkStreamingWindow": 6000,
  "rawData": {
    "enabled": "false",
    "path": "myTestParquetPath"
  },
  "input":
    {
      "name": "in",
      "type": "Kafka",
      "configuration": {
        "topics": [{"topic": "test"}],
        "metadata.broker.list": [{"host": "localhost", "port": "9092"}],
        "group.id": "my-spt-grp"
      }
    }
  ,
  "transformations": [
    {
      "name": "morphline",
      "order": 0,
      "outputFields": [
        {"name":"message"}
      ],
      "type": "Morphlines",
      "configuration": {
        "morphline": {
          "id": "test1",
          "importCommands": [
            "org.kitesdk.**"
          ],
          "commands": [
            {
              "readLine": {
                "charset": "UTF-8"
              }
            }
          ]
        }
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "writer": {
        "outputs" : ["out-elasticsearch"],
        "dateType": "long"
      },
      "dimensions": [
        {
          "name": "message",
          "field": "message"
        }
      ],
      "operators": [
        {
          "name": "countoperator",
          "type": "Count",
          "configuration": {}
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-elasticsearch",
      "type": "ElasticSearch",
      "configuration": {
        "nodes": [{"node":"localhost","tcpPort":"9300","httpPort":"9200"}],
        "indexMapping": "day"
      }
    }
  ]
}